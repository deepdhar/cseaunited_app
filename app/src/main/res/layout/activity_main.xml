<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cr_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:id="@+id/cr"
                style="@style/CategoryStyle"
                android:background="#fa7f72"
                android:text="Class Representative (CR)"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boys_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:id="@+id/boys"
                style="@style/CategoryStyle"
                android:background="#03c4a1"
                android:text="cseaunited Boys"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/girls_layout"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:gravity="center"
                android:id="@+id/girls"
                style="@style/CategoryStyle"
                android:background="#d35d6e"
                android:text="cseaunited Girls"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/group_pic"
        android:scaleType="centerCrop"/>

</LinearLayout>